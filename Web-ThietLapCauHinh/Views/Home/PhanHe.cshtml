
@{
    ViewBag.Title = "PhanHe";
    Layout = "~/Views/Shared/TrangChu.cshtml";
    var dsPH = ViewData["dsPH"] as List<MB_PhanHe>;
}
<h1 style="color:blue; text-align:center;">Danh Sách Phân Hệ</h1>
<div class="container">
    <a href="/Home/ThemPhanHe" class="btn btn-primary">Thêm</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Mã phân hệ</th>
                <th scope="col">Tên phân hệ</th>
                <th scope="col">Ghi chú</th>
                <th scope="col">Hiển thị</th>
                <th scope="col">Người tạo</th>
                <th scope="col">Ngày tạo</th>
                <th scope="col">Người cập nhật</th>
                <th scope="col">Ngày cập nhật</th>
                <th scope="col">Edit </th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @{foreach (var ph in dsPH)
                {
                    <tr>
                        <td>@ph.Id</td>
                        <td>@ph.MaPhanHe</td>
                        <td>@ph.TenPhanHe</td>
                        <td>@ph.GhiChu</td>
                        <td>@ph.IsHienThi</td>
                        <td>@ph.NguoiTao</td>
                        <td>@ph.NgayTao</td>
                        <td>@ph.NguoiCapNhat</td>
                        <td>@ph.NgayCapNhat</td>
                        <td>@Html.ActionLink("Xóa", "XoaPhanHe", "Home", new { key = @ph.Id }, null)</td>
                        <td>@Html.ActionLink("Update", "CapNhatPhanHe", "Home", new { key = @ph.Id }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="modal" tabindex="-1" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


